<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.text_field :name %>
  <%= f.label :name %>
  <%= f.text_field :description %>
  <%= f.label :description %>
  <%= f.text_field :price %>
  <%= f.label :price %>
  <br>
  <br>

  <%= f.label :product_picture %>
  <%= f.file_field :product_picture %>
  <br>
  <br>

  <%= f.submit %>
<% end %>
